{
  "manifest_version": 3,
  "name": "Anti Word Hunting",
  "version": "0.0.5",
  "description": "クレカ会社による言葉狩りへの対応",
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.dlsite.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "scripts": ["background-script.js"],
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["/assets/*"],
      "matches": ["*://*.dlsite.com/*"]
    }
  ]
}
  