{
    "manifest_version": 2,
    "name": "Anti-WordHunting",
    "version": "0.0.1",
    "description": "クレカ会社による言葉狩りへの対応",  
    "icons": {
      "48": "icons/border-48x48.png"
    },
    "permissions": [
      "menus"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.dlsite.com/*"],
        "js": ["main-contents.js"]
      }
    ],
    "background": {
      "scripts": ["main-background.js"],
      "type": "module"
    }
  }
  