{
    "manifest_version": 3,
    "name": "Anti-WordHunting",
    "version": "0.0.1",
    "description": "クレカ会社による言葉狩りへの対応",  
    "icons": {
      "48": "/assets/icon-border-48x48.png"
    },
    "permissions": [
      "menus"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.dlsite.com/*"],
        "js": ["main-contents.js"]
      }
    ],
    "background": {
      "scripts": ["main-background.js"],
      "type": "module"
    },
    "web_accessible_resources": [
      {
        "resources": ["/assets/*"],
        "matches": ["*://*.dlsite.com/*"]
      }
    ]
  }
  