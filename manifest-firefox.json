{
    "manifest_version": 3,
    "name": "Anti-WordHunting",
    "version": "0.0.4",
    "description": "クレカ会社による言葉狩りへの対応",
    "permissions": [
      "contextMenus"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.dlsite.com/*/genre/list"],
        "js": ["content-script-for-genre-list-page.js"]
      },
      {
        "matches": ["*://*.dlsite.com/*/work/=/product_id/*"],
        "js": ["content-script-for-product-page.js"]
      },
      {
        "matches": ["*://*.dlsite.com/*/work.genre"],
        "js": ["content-script-for-search-result-page.js"]
      }
    ],
    "background": {
      "scripts": ["background-script.js"],
      "type": "module"
    },
    "web_accessible_resources": [
      {
        "resources": ["/assets/*"],
        "matches": ["*://*.dlsite.com/*"]
      }
    ]
  }
  